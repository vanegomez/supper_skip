<%= render :partial => "shared/header" %>
<h1><%= @user.full_name %></h1>

<div class="content-wrapper formStyle">
  <table class="table" >
    <thead>
      <tr>
        <th>Email:</th>
        <th>Display Name:</th>
        <th>Previous Orders:</th>
      </tr>
    </thead>

    <tbody>
      <td><%= @user.email %></td>
      <td><%= @user.display_name %></td>
      <td>

